<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bit.mcnear1.languagetrainer.QuestionActivity" >

    <ImageView
        android:id="@+id/imgQuestion"
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/das_auto" />

    <RadioGroup
        android:id="@+id/radioGroup_GenderOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Der : Masculine"
            android:textColor="@color/masculine" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Das : Neutral"
            android:textColor="@color/neutral" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Die : Feminine"
            android:textColor="@color/feminine" />

    </RadioGroup>

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="German : English"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/resultsPanel"
        android:layout_width="match_parent"
        android:layout_height="26sp"
        android:layout_alignLeft="@+id/imgQuestion"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <View
            android:id="@+id/answerTab0"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab1"
            android:layout_width="52dp"
            android:layout_height="match_parent" 
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab2"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab3"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab4"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab5"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab6"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab7"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab8"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab9"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />
		<View
            android:id="@+id/answerTab10"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@color/unanswered" />

    </LinearLayout>

    <ImageView
        android:id="@+id/nextBtn"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_above="@+id/resultsPanel"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nextbutton" />

</RelativeLayout>